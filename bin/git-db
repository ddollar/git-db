#!/usr/bin/env ruby

$:.unshift('/Users/david/Code/git-db/lib')
require 'git-db'
include GitDB

GitDB.log(ENV.inspect)

git_command = ENV['SSH_ORIGINAL_COMMAND'].match(/git-(.+) '(.+)'/)

if git_command
  command    = git_command[1]
  repository = git_command[2]

  Git::Commands.execute(command, [repository])
end
